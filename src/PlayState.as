		public static const TILE_SIZE:int = 8;
		private const COMBOTEXT_OFFSET:int = 10;
		private const LEVEL_WIDTH:int = 40;
		
		private var songManager:SongManager;
		private var player:Player;
		private var combo:int;
		private var comboText:FlxText;
		private var hud:FlxGroup;
		private var levelData:Array;
		private var tileMap:FlxTilemap;
		
		override public function create():void 
		{
			songManager = new SongManager(120);
			
			tileMap = new FlxTilemap();
			levelData = getLevelData();
			tileMap.loadMap(FlxTilemap.arrayToCSV(levelData, LEVEL_WIDTH), FlxTilemap.ImgAuto, 0, 0, FlxTilemap.AUTO);
			add(tileMap);
			
			player = new Player(5, 5);
			comboText = new FlxText(COMBOTEXT_OFFSET, COMBOTEXT_OFFSET, 100, "x0");
			hud = new FlxGroup();
			add(player);
			hud.add(comboText);
			add(hud);
			hud.setAll("scrollFactor", new FlxPoint(0, 0));
			FlxG.camera.follow(player);
			combo = 0;
		}
		
		override public function update():void 
		{			
			var playerMoved:Boolean = false;
			var comboBreaker:Boolean = false;
			
			if (FlxG.keys.justPressed("W"))
			{
				player.moveUp();
				if (playerIsCollidingWithWall())
				{
					player.moveDown();
					comboBreaker = true;
				}
				playerMoved = true;
			}
			else if (FlxG.keys.justPressed("S"))
			{
				player.moveDown();
				if (playerIsCollidingWithWall())
				{
					player.moveUp();
					comboBreaker = true;
				}
				playerMoved = true;
			}
			else if (FlxG.keys.justPressed("A"))
			{
				player.moveLeft();
				if (playerIsCollidingWithWall())
				{
					player.moveRight();
					comboBreaker = true;
				}
				playerMoved = true;
			}
			else if (FlxG.keys.justPressed("D"))
			{
				player.moveRight();
				if (playerIsCollidingWithWall())
				{
					player.moveLeft();
					comboBreaker = true;
				}
				playerMoved = true;
			}
			
			CONFIG::debug {
				if (FlxG.keys.justPressed("ESCAPE"))
					System.exit(0);
			}
			
			songManager.update();
			
			if (playerMoved)
			{
				if (!comboBreaker && songManager.scoreBeat())
					++combo;
				else
					combo = 0;
				
				comboText.text = "x" + combo.toString();
			}
			
			
			if (songManager.moveIsInTimeForVisuals())
				player.scale = new FlxPoint(1.2, 1.2);
			else
				player.scale = new FlxPoint(1.0, 1.0);
			
			super.update();
		}
		
		private function playerIsCollidingWithWall():Boolean
		{
			return levelData[player.tileX + (player.tileY * LEVEL_WIDTH)] == 1;
		}
		
